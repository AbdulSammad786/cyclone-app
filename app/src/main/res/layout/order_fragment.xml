<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBack"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/appBack"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/toplayout"
        android:layout_height="wrap_content">
        <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/mlogo"
        android:id="@+id/logo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/logo"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/timelayout"
        android:id="@+id/nameandlocation"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:text="Mc Donald Cape town City"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Health,light meals,low car..."
        android:layout_below="@+id/nameandlocation"
        android:layout_toRightOf="@+id/logo"
        android:layout_toLeftOf="@+id/timelayout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:id="@+id/details"
        android:layout_marginRight="10dp"
        />
   ////////////


        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/timelayout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_text"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="42"
                android:id="@+id/time"
                android:textColor="@android:color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mints"
                android:textSize="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:layout_below="@+id/time"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/toplayout"
        android:background="@android:color/white"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/restauranticon"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:textSize="20dp"
            android:id="@+id/title"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roasted Vegetable with halloumi cheese "
            android:textSize="15dp"
            android:id="@+id/detailss"
            android:layout_below="@+id/title"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R30.89"
            android:textSize="25dp"
            android:id="@+id/price"
            android:layout_below="@+id/detailss"
            android:textColor="@color/appcolor"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/garbage"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:textSize="20dp"
            android:id="@+id/title1"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roasted Vegetable with halloumi cheese "
            android:textSize="15dp"
            android:id="@+id/detailss1"
            android:layout_below="@+id/title1"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R30.89"
            android:textSize="25dp"
            android:id="@+id/price1"
            android:layout_below="@+id/detailss1"
            android:textColor="@color/appcolor"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/garbage"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/image"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/user"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:textSize="20dp"
            android:id="@+id/name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/image1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/locationsmall"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:textSize="20dp"
            android:id="@+id/location"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image1"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Tips:"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R10"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Total:"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R100"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/black"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Delivery"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R135"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/black"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:id="@+id/delivery"
            android:layout_marginLeft="5dp"
            android:background="@drawable/unchecked"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery"
            android:layout_toRightOf="@+id/delivery"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="Collection"
            android:background="@drawable/unchecked"
            android:layout_centerVertical="true"
            android:id="@+id/collection"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/Collection"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collection"
            android:id="@+id/Collection"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/black"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/card"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/unchecked"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card"
            android:layout_toRightOf="@+id/card"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="Collection"
            android:background="@drawable/unchecked"
            android:layout_centerVertical="true"
            android:id="@+id/cash"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/Cash"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:id="@+id/Cash"
            android:layout_marginRight="52dp"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/appcolor"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:text="Send Order"
        android:id="@+id/sendorder"
        android:textAllCaps="false"
        android:textSize="25dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/appcolor"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:text="Cancel Order"
        android:textAllCaps="false"
        android:textSize="25dp"
        />
</LinearLayout>
</ScrollView>
